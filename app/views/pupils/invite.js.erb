	//$('html, body').animate({ scrollTop: $('.project-message').offset().top }, 'slow');
	$('.loading').button('reset');
<% else %>
	$('.thankyou-message').html('<%= j render "alerts/invite_success" %>');
	$('#inviteListContainer').html('<%= j render "static_pages/invite_list" %>')
	$('#modalInvite').modal('hide');
<% end %>
