<div class="container section">
<p id="notice"><%= notice %></p>

<h1>Pupils</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Madien name</th>
      <th>Class name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Is coming</th>
      <th>Is registered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pupils.each do |pupil| %>
      <tr>
        <td><%= pupil.first_name %></td>
        <td><%= pupil.last_name %></td>
        <td><%= pupil.madien_name %></td>
        <td><%= pupil.class_name %></td>
        <td><%= pupil.email %></td>
        <td><%= pupil.phone %></td>
        <td><%= pupil.is_coming %></td>
        <td><%= pupil.is_registered %></td>
        <td><%= link_to 'Show', pupil %></td>
        <td><%= link_to 'Edit', edit_pupil_path(pupil) %></td>
        <td><%= link_to 'Destroy', pupil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pupil', new_pupil_path %>
</div>
