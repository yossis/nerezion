<%= form_for(contact, remote: true) do |f| %>
  <div class="contact-message"></div>

  <div class="form-group">
    <%= f.text_field :full_name, placeholder: 'שם מלא', class:'form-control input-lg', required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, placeholder: 'כתובת מייל', class:'form-control input-lg reset-on-press', required: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :phone_number, placeholder: 'מספר טלפון', class:'form-control input-lg reset-on-press', required: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, rows: 5, placeholder:'תוכן', class:'form-control input-lg', required: true  %>
  </div>

  <div class="actions center">
    <%= f.submit 'שלח', class: 'btn btn-primary btn-lg', data: { disable_with: 'שולח..'} %>
  </div>
<% end %>
