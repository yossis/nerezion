<%= form_for(@book, remote: true) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :last_name, class: 'input-lg form-control',  placeholder: 'שם משפחתך היום' %>
    שם נעורים: <%= current_user.last_name %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :pupil_id %>
    <%= f.text_area :about,class: 'input-lg form-control', placeholder: 'מעט על עצמך' %>
  </div>

  <div class="form-group">
    <%= f.check_box :expose_phone %>
    <%= f.label :expose_phone ,'חשוף את פרטי ההתקשרות שלי בספר המחזור (כתובת מייל וטלפון)'%>
  </div>
  <div class="form-group">
    <%= f.label :old_avatar, 'תמונה מהעבר' %>
    <%= f.attachinary_file_field :old_avatar , class: 'btn btn-primary' %>
  </div>
  <div class="form-group">
    <%= f.label :old_avatar, 'תמונה מההווה' %>
    <%= f.attachinary_file_field :new_avatar %>
  </div>
  <div class="form-group">
    <%= f.label :photos, 'תמונות נוספות' %>
    <%= f.attachinary_file_field :photos %>
  </div>
  <div class="actions center">
    <%= f.submit 'עדכן', class: 'btn btn-primary btn-lg'%>
    <div class="book-update-message"></div>
  </div>
<% end %>
